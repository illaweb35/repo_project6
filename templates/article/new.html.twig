{% extends 'admin_base.html.twig' %}

{% block title %}Création d'un article
{% endblock %}

{% block content %}
    <section
        class="uk-section">
        <!-- breadCrumb -->
        <div class="uk-container uk-margin">
            <ul class="uk-breadcrumb">
                <li>
                    <a href="{{path('home')}}">Home</a>
                </li>
                <li>
                    <a href="{{path('article_index')}}">Article</a>
                </li>

                <li>
                    <span>
                        <p>Article - Ajouter</p>
                    </span>
                </li>
            </ul>
        </div>
        <!-- end of breadcrumb -->

        <div class="uk-container uk-margin-top">
            <h1 class="uk-heading-line uk-text-center">
                Création d'un Article</h1>
        </div>
        <div class="uk-container uk-margin-top uk-container-small">
            {{ include('article/_form.html.twig') }}
            <div class="uk-grid uk-grid-small uk-grid-divider uk-margin-top uk-margin-bottom" uk-grid>
                <div>
                    <a class="uk-button uk-button-text" href="{{ path('article_index') }}">
                        <span uk-icon="icon: arrow-left"></span>
                        retour à la liste</a>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script src="{{asset('js/addImages.js')}}"></script>
{% endblock %}

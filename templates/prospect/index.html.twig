{% extends 'admin_base.html.twig' %}

{% block title %}prospect index
{% endblock %}

{% block content %}
    <section class="uk-section">
        <div class="uk-container">
            <h1>Liste des emails reçus</h1>
            <table class="uk-table uk-table-hover">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Subject</th>
                        <th>Content</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for prospect in prospects %}
                        <tr>
                            <td>
                                <p>{{ prospect.fullName }}</p>
                            </td>
                            <td>
                                <p class="uk-text-small">
                                    <a href="mailto:{{prospect.email}}?subject=Dance Attitude Bréal sous monfort">{{ prospect.email }}</a>
                                </p>
                            </td>
                            <td>
                                <p</td class="uk-text-small">
                                    {{ prospect.phoneNumber|formatPhone(prospect.phoneNumber) }}
                                </p>
                            </td>
                            <td>
                                <p class="uk-text-small">
                                    {{ prospect.subject }}
                                </p>
                            </td>
                            <td>
                                <p class="uk-text-small">
                                    {{ prospect.content|slice(0,60)|raw }}...
                                </p>
                            </td>
                            <td>
                                <div class="uk-grid uk-grid-small uk grid-divider">
                                    <a href="{{ path('prospect_show', {'id': prospect.id}) }}" uk-tooltip="title: Voir +">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    <a class="uk-button uk-button-link" href="{{ path('prospect_edit', {'id': prospect.id}) }}" uk-icon="icon:file-edit"></a>

                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            {{ pagination.display() }}
        </div>
    </section>
{% endblock %}
